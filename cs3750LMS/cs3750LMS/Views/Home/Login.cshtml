@{
    ViewData["Title"] = "Login";
}

<div>
    <h1 class="display-4 text-center mt-3">@ViewData["Title"]</h1>
    <form asp-action="Login" method="post" class="w-50 mx-auto mt-5">
        <div class="form-group row">
            <div class="col-sm-2 text-right d-flex align-items-center">
                <label for="Email" class="control-label mb-0">Email</label>
            </div>
            <div class="col-sm-10">
                <input type="email" for="Email" name="Email" class="form-control" required />
                <span class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 text-right d-flex align-items-center">
                <label for="password" class="control-label mb-0">Password</label>
            </div>
            <div class="col-sm-10">
                <input type="password" for="password" name="Password" class="form-control" required />
                <span class="text-danger"></span>
            </div>
        </div>


        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary mx-2">Login</button>
            <a asp-action="SignUp" class="btn btn-warning">Sign Up</a>
        </div>

    </form>
    <div class="text-center">
        <a asp-action="SignUp">New User</a>
    </div>
</div>
